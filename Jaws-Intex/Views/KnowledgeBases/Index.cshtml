@model IEnumerable<Jaws_Intex.Models.KnowledgeBase>

@{
    ViewBag.Title = "Index";
}

<h2>Knowledge Base</h2>

<p>
    @Html.ActionLink("Add Article", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr onclick="location.href = '@Url.Action("Details", null, new { id = item.KnowledgeBaseId, Controller = "KnowledgeBases" })'">
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.KnowledgeBaseId }) |
            @Html.ActionLink("Details", "Details", new { id=item.KnowledgeBaseId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.KnowledgeBaseId })
        </td>
    </tr>
}

</table>
